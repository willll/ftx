{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug (ftx)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ftx",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "CMake Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "FTX -x SRL-Mandelbrot",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ftx",
            "args": [
                "-x",
                "/home/will/tmp/SRL-Mandelbrot/cd/data/0.bin",
                "0x06004000"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "CMake Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Attach to running ftx",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/ftx",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}"
        }
    ]
}