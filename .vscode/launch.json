{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch ftx -c",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ftx",
            "args": [
                "-c"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ftx",
            "args": [
                "--dump",
                "bios.bin"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug FTX",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ftx -c -C COM",
            "args": [
                "-c -C COM"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
        }
    ]
}